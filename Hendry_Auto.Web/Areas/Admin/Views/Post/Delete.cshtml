@model PostVM

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class=" text-uppercase text-center"> Edit Post's</h2>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8 border-1 border p-4">
            <form asp-action="Delete" method="post" enctype="multipart/form-data">
                <input asp-for="@Model.Post.Id" hidden />
                <input asp-for="@Model.Post.VehicleImage" hidden />

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.Name" class="form-label"></label>
                            <input asp-for="@Model.Post.Name" class="form-control" disabled/>
                            <span asp-validation-for="@Model.Post.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.BrandId" class="form-label"></label>
                            <select asp-for="@Model.Post.BrandId" class="form-select" asp-items="@Model.BrandList" disabled>
                                <option disabled selected>-- Select Brand --</option>
                            </select>
                            <span asp-validation-for="@Model.Post.BrandId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.VehicleTypeId" class="form-label"></label>
                            <select asp-for="@Model.Post.VehicleTypeId" class="form-select" asp-items="@Model.VehicleTypeList" disabled>
                                <option disabled selected>-- Select VehicleType --</option>
                            </select>
                            <span asp-validation-for="@Model.Post.VehicleTypeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.EngineAndFuelType" class="form-label"></label>
                            <select asp-for="@Model.Post.EngineAndFuelType" class="form-select" asp-items="@Model.EngineAndFuelTypeList" disabled>
                                <option disabled selected>-- Select EngineAndFuelType --</option>
                            </select>
                            <span asp-validation-for="@Model.Post.EngineAndFuelType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.Transmission" class="form-label"></label>
                            <select asp-for="@Model.Post.Transmission" class="form-select" asp-items="@Model.TransmissionList" disabled>
                                <option disabled selected>-- Select Transmission --</option>
                            </select>
                            <span asp-validation-for="@Model.Post.Transmission" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.Engine" class="form-label"></label>
                            <input asp-for="@Model.Post.Engine" class="form-control" disabled />
                            <span asp-validation-for="@Model.Post.Engine" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.TopSpeed" class="form-label"></label>
                            <input asp-for="@Model.Post.TopSpeed" class="form-control" disabled />
                            <span asp-validation-for="@Model.Post.TopSpeed" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.Mileage" class="form-label"></label>
                            <input asp-for="@Model.Post.Mileage" class="form-control" disabled />
                            <span asp-validation-for="@Model.Post.Mileage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.Range" class="form-label"></label>
                            <input asp-for="@Model.Post.Range" class="form-control" disabled />
                            <span asp-validation-for="@Model.Post.Range" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.SeatingCapacity" class="form-label"></label>
                            <input asp-for="@Model.Post.SeatingCapacity" class="form-control" disabled />
                            <span asp-validation-for="@Model.Post.SeatingCapacity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.PriceFrom" class="form-label"></label>
                            <input asp-for="@Model.Post.PriceFrom" class="form-control" disabled />
                            <span asp-validation-for="@Model.Post.PriceFrom" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.PriceTo" class="form-label"></label>
                            <input asp-for="@Model.Post.PriceTo" class="form-control" disabled />
                            <span asp-validation-for="@Model.Post.PriceTo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.Ratings" class="form-label"></label>
                            <input asp-for="@Model.Post.Ratings" class="form-control" disabled />
                            <span asp-validation-for="@Model.Post.Ratings" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-12 text-end">
                        <div class="mb-3">
                            <a asp-area="Admin" asp-controller="Post" asp-action="Index" class="btn btn-danger"> Back</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>

                    </div>
                </div>
            </form>

        </div>

        
    </div>

</div>